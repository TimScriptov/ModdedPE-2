<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<android.support.v7.widget.AppCompatImageView
				android:layout_height="100dp"
				android:layout_width="match_parent"
				android:src="@drawable/icon_hdpi"
				android:layout_margin="30dp"/>

			<android.support.v7.widget.AppCompatTextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="match_parent"
				android:text="@string/app_name"
				android:layout_marginLeft="15dp"
				android:singleLine="true"
				android:layout_marginRight="15dp"
				android:gravity="center"/>

			<android.support.v7.widget.AppCompatTextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:text="@string/app_version"
				android:singleLine="true"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp"
				android:gravity="center"/>

			<android.support.v7.widget.AppCompatTextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="match_parent"
				android:text="@string/about_copyright_owner"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp"
				android:singleLine="true"
				android:gravity="center"
				android:layout_marginTop="10dp"/>

			<android.support.v7.widget.AppCompatTextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="match_parent"
				android:text="@string/about_author"
				android:layout_marginLeft="15dp"
				android:singleLine="true"
				android:layout_marginRight="15dp"
				android:gravity="center"
				android:layout_marginBottom="35dp"/>

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#6E6E6E"
				android:layout_centerVertical="true"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"/>

			<android.support.v7.widget.AppCompatButton
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="@string/about_view_github"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:id="@+id/about_view_github_button"/>
			
			<android.support.v7.widget.AppCompatButton
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="@string/about_view_privacy_policy"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:id="@+id/about_view_privacy_policy_button"/>
			
			<android.support.v7.widget.AppCompatButton
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="@string/about_view_nmod_api"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:id="@+id/about_view_nmod_api_button"/>
			
			<android.support.v7.widget.AppCompatButton
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="@string/about_translators"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:id="@+id/about_translators_button"/>

		</LinearLayout>

	</ScrollView>

</RelativeLayout>

