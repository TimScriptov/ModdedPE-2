<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:foreground="?attr/selectableItemBackground"
	card_view:cardCornerRadius="5dp"
	card_view:cardPreventCornerOverlap="true"
	card_view:cardUseCompatPadding="true"
	card_view:contentPadding="1dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:layout_margin="10dp">

			<android.support.v7.widget.AppCompatImageView
				android:layout_height="75dp"
				android:layout_width="75dp"
				android:id="@+id/moddedpe_nmod_load_failed_item_card_icon"/>

			<android.support.v7.widget.AppCompatTextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content"
				android:layout_toRightOf="@id/moddedpe_nmod_load_failed_item_card_icon"
				android:layout_marginLeft="10dp"
				android:layout_centerVertical="true"
				android:id="@+id/moddedpe_nmod_load_failed_item_card_package_name"/>

		</RelativeLayout>

		<android.support.v7.widget.AppCompatTextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="match_parent"
			android:layout_marginBottom="10dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:id="@+id/moddedpe_nmod_load_failed_item_card_message"/>

	</LinearLayout>

</android.support.v7.widget.CardView>

